{% extends "layout.html.twig" %}

{% block title %}{{ 'title.page.etape2'|trans }}{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

    <h3 class="box"><b>{{ 'title.page.etape2'|trans }} - {{ 'title.body.h3etape2'|trans }}</b></h3>
    <br />
    <div class="box">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {% for ticket in form.tickets %}
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(ticket.name) }}
                    {{ form_errors(ticket.name) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(ticket.name) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(ticket.firstname) }}
                    {{ form_errors(ticket.firstname) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(ticket.firstname) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(ticket.country) }}
                    {{ form_errors(ticket.country) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(ticket.country) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(ticket.birthday) }}
                    {{ form_errors(ticket.birthday) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(ticket.birthday) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_label(ticket.tarifReduit) }}
                    {{ form_errors(ticket.tarifReduit) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(ticket.tarifReduit) }}
                </div>
            </div>
        <hr>
        {% endfor %}
        <div>
            <input type="submit" value="{{ 'button.validate'|trans }}" class="btn btn-success" />
        </div>
        {{ form_end(form) }}
    </div>


{% endblock %}

{% block javascript %}

{% endblock %}
